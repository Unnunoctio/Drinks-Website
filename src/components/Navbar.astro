---
import { Image } from "astro:assets";

const pathname = Astro.url.pathname
---

<nav class="flex justify-between w-full max-w-page py-2">
  <a href="/" aria-label="home" class="transition-transform scale-[0.95] hover:scale-100 ">
    <Image src="/logo.svg" alt="LOGO" width={117} height={45} />
  </a>

  <ul class="flex gap-2 font-medium">
    <li class={`${pathname === "/" ? "hidden sm:flex" : "flex"}`}>
      <a href="/" aria-label="home" class="px-4 sm:px-8 py-2.5 hover:underline">Inicio</a>
    </li>
    <li class={`${pathname === "/about" ? "hidden sm:flex" : "flex"}`}>
      <a href="/about" aria-label="about" class="px-4 sm:px-8 py-2.5 hover:underline">Acerda de</a>
    </li>
  </ul>
</nav>